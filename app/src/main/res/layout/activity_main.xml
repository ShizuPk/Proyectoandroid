<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="320dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:background="#EFE6E6"
        android:backgroundTint="#9C27B0"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="crear un producto?"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/textproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ingresa el producto que crearas aqui"
        android:padding="16dp"
        android:inputType="text"
        android:textSize="18dp"

        />

    <Button
        android:id="@+id/button"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="serif"
        android:padding="16sp"
        android:shadowColor="@color/black"
        android:text="guardarðŸ”Ž"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#D51C1C"
        android:fontFamily="sans-serif"
        android:padding="16sp"
        android:text="eliminarðŸª„"
        android:textSize="24dp" />

    <Button
        android:id="@+id/botonLista"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#D56C1C"
        android:fontFamily="sans-serif"
        android:padding="16sp"
        android:text="Ir a La Lista "
        android:textSize="24dp" />

    <TextView
        android:id="@+id/resultadoText"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textColor="@color/black" />

</LinearLayout>